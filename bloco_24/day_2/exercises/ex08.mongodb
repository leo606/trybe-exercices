use('erp');
// db.vendas.find()

db.vendas.aggregate([
  {
    $match: {
      status: "EM SEPARACAO",
      dataVenda: {
        $gte: ISODate('2020-03-01'),
        $lte: ISODate('2020-03-31'),
      }
    }
  },
  {
    $project: {
      _id: 0,
      clienteId: 1,
      dataVenda:1,
      dataEntregaPrevista: {
        $add: [
          '$dataVenda',
          24 * 3 * 60 * 60 * 1000
        ]
      }
    }
  }
])